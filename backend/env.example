# Backend Environment Variables
# Copy this file to .env and fill in your values

# Application Settings
APP_NAME=AI Multi-Agent Content Creation & Marketing System
VERSION=1.0.0
DEBUG=false
ENVIRONMENT=development

# Server Settings
HOST=0.0.0.0
PORT=8000
WORKERS=1

# Security Settings
SECRET_KEY=your-super-secret-key-change-in-production-minimum-32-characters
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# CORS Settings
ALLOWED_HOSTS=["http://localhost:3000", "http://127.0.0.1:3000"]

# Database Settings
DATABASE_URL=postgresql+asyncpg://user:password@localhost/ai_multi_agent
DATABASE_ECHO=false

# Redis Settings
REDIS_URL=redis://localhost:6379
REDIS_DB=0
REDIS_PASSWORD=

# AI API Settings
OPENAI_API_KEY=your-openai-api-key
ANTHROPIC_API_KEY=your-anthropic-api-key

# Cloud Storage Settings
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=your-s3-bucket-name

# Email Settings
SENDGRID_API_KEY=your-sendgrid-api-key
EMAIL_FROM=noreply@ai-multi-agent.com

# SMS Settings
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=your-twilio-phone-number

# Monitoring Settings
ENABLE_METRICS=true
METRICS_PORT=9090

# Logging Settings
LOG_LEVEL=INFO
LOG_FORMAT=json

# Rate Limiting
RATE_LIMIT_PER_MINUTE=100
RATE_LIMIT_PER_HOUR=1000

# File Upload Settings
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=["image/jpeg", "image/png", "image/gif", "application/pdf", "text/plain"]

# Content Generation Settings
MAX_CONTENT_LENGTH=5000
DEFAULT_CONTENT_TONE=professional
DEFAULT_CONTENT_STYLE=informative

# Agent Settings
MAX_CONCURRENT_AGENTS=10
AGENT_TIMEOUT_SECONDS=300

# Marketing Settings
ENABLE_SOCIAL_MEDIA=true
ENABLE_EMAIL_MARKETING=true
ENABLE_SEO_OPTIMIZATION=true

# Analytics Settings
ENABLE_ANALYTICS=true
ANALYTICS_RETENTION_DAYS=365
